---
interface Props {
  error?: string;
  submitLabel?: string;
}

const { error, submitLabel } = Astro.props;
---

<div class="flex flex-col items-center mt-4">
  {error && <p class="text-error">{error}</p>}

  <button class="btn btn-primary btn-wide" type="submit">
    {submitLabel ?? "Save and Continue"}
  </button>
</div>
